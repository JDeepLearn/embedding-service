# Provider choice: hf (Hugging Face) or granite (on-prem)
EMBED_PROVIDER=hf

# HF model name
HF_MODEL=intfloat/e5-large-v2

# Future Granite settings (ignored unless EMBED_PROVIDER=granite)
GRANITE_ENDPOINT=http://granite-runtime:8085
GRANITE_MODEL_ID=ibm/granite-embedding-english-r2

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
APP_VERSION=1.0.0
CORS_ALLOW_ORIGINS=*
REQUEST_TIMEOUT_MS=10000
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]