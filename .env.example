# ===================================================================
# Embedding Service - Environment Configuration
# ===================================================================
# Rename this file to `.env` for local use.
# These values will be automatically loaded by the app.
# ===================================================================

# --- Application Metadata ---
APP_NAME="Embedding Service"
APP_VERSION="1.0.0"
ENVIRONMENT="local"             # local | dev | prod

# -------- Model Configuration --------
MODEL_NAME=ibm-granite/granite-embedding-english-r2
#MODEL_VERSION=1.0.0
MODEL_PATH=/opt/models/granite-embedding-english-r2

# -------- Runtime Device --------
# Options: auto | cpu | cuda
DEVICE=auto

# -------- Performance Controls --------
EMBED_BATCH_SIZE=32
MAX_SEQ_LENGTH=512

# -------- Input Limits --------
MAX_TEXTS_PER_REQUEST=64
MAX_CHARS_PER_TEXT=4000
MAX_TOTAL_CHARS=256000

# -------- Security --------
# If set, all requests must include header: X-API-Key=<API_KEY>
#API_KEY=super-secret-key

# -------- Networking & CORS --------
# Comma-separated origins (no spaces)
#CORS_ALLOW_ORIGINS=

# --- Network / API ---
HOST="0.0.0.0"
PORT=8000

# -------- Logging --------
LOG_LEVEL="INFO"                # DEBUG | INFO | WARNING | ERROR | CRITICAL

# -------- Metrics --------
METRICS_ENABLED=true

# -------- Optional Fallback Model (for resilience or A/B) --------
# FALLBACK_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
# FALLBACK_MODEL_PATH=/opt/models/all-MiniLM-L6-v2